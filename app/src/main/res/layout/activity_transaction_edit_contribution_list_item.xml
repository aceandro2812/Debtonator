<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tran_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:text="PersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tran_contribution"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tran_contribution" />

    <EditText
        android:id="@+id/tran_contribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:editable="true"
        android:ems="10"
        android:inputType="text"
        android:text="Transaction Contribution"
        app:layout_constraintLeft_toRightOf="@+id/tran_person_name"
        app:layout_constraintRight_toLeftOf="@+id/tran_is_consumer"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/tran_is_consumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tran_contribution"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tran_contribution"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tran_contr_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="TransactionContributionId"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tran_person_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>