<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/person_summary_transaction_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="Transaction"
        app:layout_constraintHorizontal_weight="0.30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/person_summary_transaction_consumption"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_summary_transaction_consumption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="consumption"
        app:layout_constraintHorizontal_weight="0.20"
        app:layout_constraintLeft_toRightOf="@+id/person_summary_transaction_name"
        app:layout_constraintRight_toLeftOf="@+id/person_summary_transaction_contribution"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_summary_transaction_contribution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="contribution"
        app:layout_constraintHorizontal_weight="0.20"
        app:layout_constraintLeft_toRightOf="@+id/person_summary_transaction_consumption"
        app:layout_constraintRight_toLeftOf="@+id/person_summary_transaction_worth"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_summary_transaction_worth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="worth"
        app:layout_constraintHorizontal_weight="0.20"
        app:layout_constraintLeft_toRightOf="@+id/person_summary_transaction_contribution"
        app:layout_constraintRight_toLeftOf="@+id/person_summary_transaction_people"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_summary_transaction_people"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="num People"
        app:layout_constraintHorizontal_weight="0.10"
        app:layout_constraintLeft_toRightOf="@+id/person_summary_transaction_worth"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>