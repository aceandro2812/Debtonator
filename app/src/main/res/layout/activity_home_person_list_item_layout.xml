<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="PersonName"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/emptyPhoneNumber"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/person_name"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/person_name" />

    <TextView
        android:id="@+id/person_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="emailId"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/person_phone"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/person_phone" />
</android.support.constraint.ConstraintLayout>